<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Untitled Document</title>
	</head>
	<body>
		<h2>Individual threesixty Results for: <%= @user.name %></h2>
		<hr>
		<% @counter = 0 %>
		<% @threesixtyqs.each do |t|%>
			<h3>Question Number: <%=  @counter += 1%></h3>
			<h4>Question Text:</h4> 
			<%= t.question_text%>
			<h4>Question Answer(s):</h4>
			<% if Threesixtyanswer.exists?(:threesixtyq_id => t, :user_id => @user )%>
				<% @showanswer = Threesixtyanswer.find(:last, :conditions => {:threesixtyq_id => t.id, :user_id => @user})%>
				<% if @showanswer.theanswer_1%>
					<p>
					  <%=h t.answer_1 %>
					</p>
				<% end %>
					
				<% if @showanswer.theanswer_2%>
					<p>
					  <%=h t.answer_2 %>
					</p>
				<% end %>
					
				<% if @showanswer.theanswer_3%>
					<p>
					  <%=h t.answer_3 %>
					</p>
				<% end %>
					
				<% if @showanswer.theanswer_4%>
					<p>
					  <%=h t.answer_4 %>
					</p>
				<% end %>
					
			<% else %>
				<h3>The user has not answered this question yet.</h3>
			<% end %>
			<hr>
		<% end %>
		<% @threesixty.threesixtytextqs.each do |t|%>
			<h3>Question Number: <%=  @counter += 1%></h3>
			<h4>Question Text:</h4> 
			<%= t.question_text%>
			<h4>Question Answer:</h4>
			<% if Threesixtytexta.exists?(:threesixtytextq_id => t, :user_id => @user)%>
				<% @showanswer = Threesixtytexta.find(:first, :conditions => {:threesixtytextq_id => t.id, :user_id => @user})%>
				<%= @showanswer.theanswer %>
			<% else %>
				<h3>The user has not answered this question yet.</h3>
			<% end %>
			<hr>
		<% end %>
		
		<%= button_to "Back to Cumulative Results", "/threesixties/results/" + @threesixty.id.to_s %>
	</body>
</html>
