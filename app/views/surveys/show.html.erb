<h2>Editing Survey</h2>
<hr>
<p>
  <b>Survey name:</b>
  <%=h @survey.survey_name %>
</p>

<p>
  <b>Survey due date:</b>
  <%=h @survey.survey_date %>
</p>

<p>
  <b>Survey creator:</b>
  <%=h User.find(@survey.survey_creator).name %>
</p>

<% form_for(@survey) do |f| %>
  <%= f.error_messages %>
  <p>
  	<b>Survey Information and Instructions:</b><br />
    <%= f.text_area :survey_intro, :cols => "50", :rows => "3" %>
  </p>
  <% if @survey.survey_intro == "" %>
	  <p>
	    <%= f.submit 'Create Intro' %>
	  </p>
  <% else %>
	  <p>
	    <%= f.submit 'Update Intro', :message => 'Survey Information and Instructions Updated' %>
	  </p>
  <% end %>
<% end %>

<h1>Multiple Choice Questions:</h1>
<hr>

<% @survey.mcquestions.each do |mcquestion| %>
	<p>
	  <b>Question Text:</b>
	  <%=h mcquestion.question_text %>
	</p>
	
	<p>
	  <b>Question Instructions and Additional Comments:</b>
	  <%=h mcquestion.question_comment %>
	</p>
	
	<p>
	  <b>Answer 1:</b>
	  <%=h mcquestion.answer_1 %>
	</p>
	
	<p>
	  <b>Answer 2:</b>
	  <%=h mcquestion.answer_2 %>
	</p>
	
	<p>
	  <b>Answer 3:</b>
	  <%=h mcquestion.answer_3 %>
	</p>
	
	<p>
	  <b>Answer 4:</b>
	  <%=h mcquestion.answer_4 %>
	</p>
	
	<p>
	  <b>Answer 5:</b>
	  <%=h mcquestion.answer_5 %>
	</p>
	
	<p>
	  <b>Allow Multiple Answers:</b>
	  <% if(mcquestion.multipleanswers == false) %>
	  	No
	  <% else %>
	    Yes
	  <% end %>
	</p>
	
	<%= link_to 'Edit Question', edit_mcquestion_path(mcquestion) %> |
    <%= link_to 'Delete', mcquestion, :confirm => 'Are you sure?', :method => :delete %>
	</p>
	<hr>	
<% end %>

<b>You can add as many multiple choice questions as you want.  Fill out the form below to
add a new question.</b>

<hr>

<h1>New Multiple Choice Question</h1>
<% form_for [@survey, Mcquestion.new] do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :question_text %><br />
		<%= f.text_area :question_text, :cols => "50", :rows => "3" %>
	</p>
	<p>
		<%= f.label :question_comment, "Question Instructions and Additional Comments" %><br />
		<%= f.text_area :question_comment, :cols => "50", :rows => "3" %>
	</p>
	<p>
		<%= f.label :answer_1 %><br />
		<%= f.text_field :answer_1 %>
	</p>
	<p>
		<%= f.label :answer_2 %><br />
		<%= f.text_field :answer_2 %>
	</p>
	<p>
		<%= f.label :answer_3 %><br />
		<%= f.text_field :answer_3 %>
	</p>
	<p>
		<%= f.label :answer_4 %><br />
		<%= f.text_field :answer_4 %>
	</p>
	<p>
		<%= f.label :answer_5 %><br />
		<%= f.text_field :answer_5 %>
	</p>
	<p>
		<%= f.check_box :multipleanswers %>
		<%= f.label :multipleanswers, "Allow multiple answers?" %><br />
	</p>
	<p>
	<%= f.submit 'Submit Multiple Choice Question'%>
	</p>
<% end %>

<br />

<h1>Essay/Short Answer Questions:</h1>
<hr>

<% @survey.textquestions.each do |textquestion| %>
	<p>
	  <b>Question Text:</b>
	  <%=h textquestion.question_text %>
	</p>
	
	<p>
	  <b>Question Instructions and Additional Comments:</b>
	  <%=h textquestion.question_comment %>
	</p>
	
	<p>
	<%= link_to 'Edit Question', edit_textquestion_path(textquestion) %> |
    <%= link_to 'Delete', textquestion, :confirm => 'Are you sure?', :method => :delete %>
	</p>	
	<hr>
<% end %>

<b>You can add as many essay/short answer questions as you want.  Fill out the form below to
add a new question.</b>

<hr>

<h1>New Essay/Short Answer Question</h1>
<% form_for [@survey, Textquestion.new] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :question_text %><br />
    <%= f.text_area :question_text, :cols => "50", :rows => "3"  %>
  </p>
  <p>
    <%= f.label :question_comment, "Question Instructions and Additional Comments" %><br />
    <%= f.text_area :question_comment, :cols => "50", :rows => "3"  %>
  </p>
  <p>
  <%= f.submit 'Submit Essay/Short Answer Question' %>
  </p>
<% end %>



<p>
	<hr>
	<%= button_to 'Back to Survey List', "/surveys/index" %>
</p>
