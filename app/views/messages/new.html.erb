<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>
	<% if params[:topic] %><input type="hidden" id="topic_forum_id" name="message[topic_id]" value="<%= params[:topic] %>" /><% end %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>