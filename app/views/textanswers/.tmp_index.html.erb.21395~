  <tr>
    <td><%=h textanswer.theanswer %></td>
    <td><%=h textanswer.user %></td>
    <td><%=h textanswer.textquestion %></td>
    <td><%= link_to 'Show', textanswer %></td>
    <td><%= link_to 'Edit', edit_textanswer_path(textanswer) %></td>
    <td><%= link_to 'Destroy', textanswer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

