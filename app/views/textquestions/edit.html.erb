<h1>Editing textquestion</h1>

<% form_for(@textquestion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :question_text %><br />
    <%= f.text_area :question_text, :cols => "50", :rows => "3"  %>
  </p>
  <p>
    <%= f.label :question_comment %><br />
    <%= f.text_area :question_comment, :cols => "50", :rows => "3"  %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', :controller => "surveys", :action => @textquestion.survey_id %>